<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".generapport">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/home_toolbar55"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"/>



            <TextView
                android:layout_width="match_parent"
                android:text="RAPPORT DE PRESENCE"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="@color/bleu"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/datedebutx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:text="Selectionnez la date de debut"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />




            <TextView
                android:id="@+id/datefinx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:text="Selectionnez la date de fin"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />












            <EditText
                android:id="@+id/mailr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:hint="Entrez le mail sur lequel le rapport sera envoyer"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />




            <Button
                android:id="@+id/buttonx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Generer le rapport"
                android:textColor="#fff"
                android:layout_marginTop="50dp"
                android:background="@drawable/button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>