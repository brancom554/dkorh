<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.dkorh.Changepass">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/home_toolbar5xxcd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:text="MODIFICATION DE MOT DE PASSE"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textColor="@color/bleu"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
            </TextView>
            <EditText
                android:id="@+id/mdpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:hint="ANCIEN MOT DE PASSE"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />
            <EditText
                android:id="@+id/mdpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:hint="NOUVEAU MOT DE PASSE"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />
            <EditText
                android:id="@+id/mdpn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2CA7E0"
                android:layout_gravity="center"
                android:hint="CONFIRMER LE NOUVEAU MOT DE PASSE"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit"
                android:padding="20dp" />
            <Button
                android:id="@+id/buttonx45"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Valider"
                android:textColor="#fff"
                android:layout_marginTop="50dp"
                android:background="@drawable/button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>